<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <TextView
        android:id="@+id/txtLayoutHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Android Development!!!"
        android:layout_gravity="center"
        android:fontFamily="sans-serif-black"
        android:textSize="25sp"
        android:padding="8dp"
        android:layout_alignParentTop="true"
        android:textStyle="bold"
        android:textColor="#0d47a1"
        />
    <TextView
        android:id="@+id/txtLayoutSecondHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Android is Fun"
        android:layout_below="@+id/txtLayoutHeader"
        android:textColor="#ff0000"
        android:textStyle="italic"
        android:textSize="20sp"
        android:layout_gravity="center"
        />
    <ImageView
        android:id="@+id/imgTonyStack"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerInParent="true"
        android:layout_margin="20dp"
        android:src="@drawable/tony_stark"/>

    <Button
        android:id="@+id/btnClickHere"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:background="#D3D3D3"
        android:text="CLICK HERE"
        android:textSize="20sp"
        android:layout_alignParentBottom="true"
        android:textStyle="bold"
        android:textColor="#000000"/>

    <EditText
        android:id="@+id/etName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:hint="Enter Name plzz"
        android:layout_below="@id/txtLayoutSecondHeader"
        android:inputType="text"
        />
    <EditText
        android:id="@+id/etPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:hint="Enter Password"
        android:layout_below="@id/etName"
        android:inputType="numberPassword"
        />
</RelativeLayout>